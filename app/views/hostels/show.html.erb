<div class="container">
	<h1>Hostel Details</h1>
	<table class="table table-hover">
		<tr>
			<td>Hostel Name:</td>
			<td><%= @hostel.name %></td>
		</tr>
		<tr>
			<td>Address:</td>
			<td><%= @hostel.address %></td>
		</tr>
		<tr>
			<td>Pincode:</td>
			<td><%= @hostel.pincode %></td>
		</tr>
		<tr>
			<td>Mobile No:</td>
			<td><%= @hostel.mobile_number %></td>
		</tr>
		<tr>
			<td>No of Rooms</td>
			<td><%= @hostel.no_of_rooms %></td>
		</tr>
		<tr>
			<td>Room Rent</td>
			<td><%= @hostel.room_rent %></td>
		</tr>
		<tr>
			<td>Available Room</td>
			<td id="available-rooms"><%= @hostel.available_rooms %></td>
		</tr>
		<tr>
			<td colspan="2">
				<% if current_user.admin? && current_user.id == @hostel.user_id %>
					<%= link_to 'Edit Hostel details', edit_user_hostel_path(current_user, @hostel.id) %> ||
					
				<%end%>
				<%= link_to 'back', user_hostels_path(current_user) %>
			</td>
		</tr>
	</table>

</div>
