<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<%= search_form_for @q do |f| %>
		  <div class="form-group">
			 	<%= f.search_field :name, class: "form-control", placeholder: "Hostel Name", style: "width:80%; float:left;" %>
			 	<%= f.submit "Search", class: "btn btn-info" %>
		 	</div>
		<% end %>
	</div>
	<div class="col-md-3"></div>
</div>

<div class="container">
	<h1>List of Hostels</h1>
	<% if current_user.admin? %>
		<%= link_to 'Add new Hostel', new_user_hostel_path(current_user),class: 'btn btn-info' %>
	<%end%>
	<table class="table table-hover" style="margin-top: 15px;">	
		<tr>
			<th><%= sort_link(@q, :name, 'Hostel Name')%></th>
			<th colspan="2">Options</th>
		</tr>
		<tr>
			<% @hostels.each do |f| %>
				<td><%= f.name %></td>
				<td><%= link_to 'Show', hostel_path(f),class: 'btn btn-info' %></td>
		</tr>
			<%end%>
	</table>
  <%= link_to 'Back', root_path,class: 'btn btn-info' %>
</div>