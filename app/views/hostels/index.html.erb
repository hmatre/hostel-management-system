<div class="container">
	<h1>List of Hostels</h1>
	<% if current_user.admin? %>
		<%= link_to 'add new Hostel', new_user_hostel_path(current_user) %>
	<%end%>
	<table class="table table-hover">	
		<tr>
			<th>Hostel-Name</th>
			<th colspan="2">Options</th>
		</tr>
		<tr>
			<% @hostels.each do |f| %>
				<td><%= f.name %></td>
				<td><%= link_to 'show', hostel_path(f) %></td>
		</tr>
			<%end%>
	</table>
  <%= link_to 'back', root_path %>
</div>