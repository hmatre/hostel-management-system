<h1 align="center">Welcome to Hostel Management System</h1>
<div class="container">
	<% if user_signed_in? %>
		<ul>
			<li><%= link_to 'See All Hostels List', hostels_path %></li>
			
			<% if current_user.bookings.present? %>
				<li><%= link_to 'See All Your Booking', user_bookings_path(current_user) %></li>
			<%end%>
			
			<% if current_user.admin? %>
				<li><%= link_to 'Hostel Bookings status', admin_booking_status_path %></li>
			<%end%>
	</ul>
	<%end%>
</div>